    <!-- JavaScript Logic -->
    <script>
        // -------------------------------------------------------
        // Helper: Label Wrapping Logic (16 char limit)
        // -------------------------------------------------------
        function splitLabel(label) {
            if (typeof label !== 'string' || label.length <= 16) return label;
            const words = label.split(' ');
            const lines = [];
            let currentLine = words[0];

            for (let i = 1; i < words.length; i++) {
                if ((currentLine + " " + words[i]).length <= 16) {
                    currentLine += " " + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        // -------------------------------------------------------
        // Helper: Common Tooltip Configuration (다중 라벨 지원)
        // -------------------------------------------------------
        const commonTooltipOptions = {
            callbacks: {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    if (Array.isArray(label)) {
                        return label.join(' ');
                    } else {
                        return label;
                    }
                }
            }
        };

        // -------------------------------------------------------
        // Chart 1: Competitor Radar Chart (경쟁자 비교 분석)
        // -------------------------------------------------------
        const ctxRadar = document.getElementById('competitorRadar').getContext('2d');
        const radarData = {
            labels: ['혁신 이미지', '조직력', '행정 경험', '미래 비전', '유권자 신선도', '중앙 연결고리'],
            datasets: [{
                label: '김수현 후보',
                data: [9, 6, 5, 9, 9, 8],
                fill: true,
                backgroundColor: 'rgba(0, 188, 212, 0.2)', // Cyan transparent
                borderColor: '#00BCD4',
                pointBackgroundColor: '#00BCD4',
                pointBorderColor: '#fff',
                pointHoverBackgroundColor: '#fff',
                pointHoverBorderColor: '#00BCD4'
            }, {
                label: '이춘희 후보',
                data: [3, 9, 9, 4, 3, 5],
                fill: true,
                backgroundColor: 'rgba(158, 158, 158, 0.2)', // Grey transparent
                borderColor: '#9E9E9E',
                pointBackgroundColor: '#9E9E9E',
                pointBorderColor: '#fff',
                pointHoverBackgroundColor: '#fff',
                pointHoverBorderColor: '#9E9E9E'
            }]
        };

        // Apply splitting to labels
        radarData.labels = radarData.labels.map(splitLabel);

        new Chart(ctxRadar, {
            type: 'radar',
            data: radarData,
            options: {
                maintainAspectRatio: false,
                elements: { line: { borderWidth: 3 } },
                scales: {
                    r: {
                        angleLines: { display: true },
                        suggestedMin: 0,
                        suggestedMax: 10
                    }
                },
                plugins: {
                    tooltip: commonTooltipOptions,
                    legend: { position: 'bottom' }
                }
            }
        });

        // -------------------------------------------------------
        // Chart 2: Polling Trend Line Chart (여론조사 추이)
        // -------------------------------------------------------
        const ctxLine = document.getElementById('pollingTrendChart').getContext('2d');
        const lineData = {
            labels: ['D-28 (시작)', 'D-21 (1단계)', 'D-14 (2단계)', 'D-7 (3단계)', 'D-Day'],
            datasets: [{
                label: '김수현 후보',
                data: [15, 25, 38, 45, 51],
                borderColor: '#00BCD4', // Cyan
                backgroundColor: '#00BCD4',
                tension: 0.4,
                borderWidth: 4
            }, {
                label: '이춘희 후보',
                data: [42, 40, 36, 32, 30],
                borderColor: '#9E9E9E', // Grey
                backgroundColor: '#9E9E9E',
                tension: 0.4,
                borderWidth: 2,
                borderDash: [5, 5]
            }]
        };

        // Apply splitting
        lineData.labels = lineData.labels.map(splitLabel);

        new Chart(ctxLine, {
            type: 'line',
            data: lineData,
            options: {
                maintainAspectRatio: false,
                scales: {
                    y: { beginAtZero: true, title: { display: true, text: '지지율 (%)' } }
                },
                plugins: {
                    tooltip: commonTooltipOptions,
                    legend: { position: 'bottom' },
                    annotation: {
                        annotations: {
                            line1: {
                                type: 'line',
                                xMin: 2, // Index of D-14
                                xMax: 2,
                                borderColor: '#FFC107',
                                borderWidth: 2,
                                label: { content: '골든 크로스', enabled: true, position: 'top' }
                            }
                        }
                    }
                }
            }
        });

        // -------------------------------------------------------
        // Chart 3: GOTV Resource Allocation (최종 72시간 전략)
        // -------------------------------------------------------
        const ctxGotv = document.getElementById('gotvChart').getContext('2d');
        const gotvData = {
            labels: ['D-3: ARS 캠페인', 'D-2: 콜센터 가동', 'D-1: 문자 총력전', 'D-Day: 실시간 추적'],
            datasets: [{
                label: '자원 투입 강도 (%)',
                data: [60, 75, 90, 100],
                backgroundColor: [
                    'rgba(63, 81, 181, 0.6)',
                    'rgba(63, 81, 181, 0.7)',
                    'rgba(63, 81, 181, 0.8)',
                    'rgba(244, 67, 54, 0.9)' // Red for D-Day
                ],
                borderColor: [
                    'rgba(63, 81, 181, 1)',
                    'rgba(63, 81, 181, 1)',
                    'rgba(63, 81, 181, 1)',
                    'rgba(244, 67, 54, 1)'
                ],
                borderWidth: 1
            }]
        };

        gotvData.labels = gotvData.labels.map(splitLabel);

        new Chart(ctxGotv, {
            type: 'bar',
            data: gotvData,
            options: {
                indexAxis: 'y',
                maintainAspectRatio: false,
                scales: {
                    x: { beginAtZero: true, max: 100 }
                },
                plugins: {
                    tooltip: commonTooltipOptions,
                    legend: { display: false }
                }
            }
        });

        // -------------------------------------------------------
        // Simple Background Animation (Canvas)
        // -------------------------------------------------------
        const canvas = document.getElementById('heroCanvas');
        const ctx = canvas.getContext('2d');
        let width, height, particles;

        function initHeroCanvas() {
            width = canvas.width = canvas.offsetWidth;
            height = canvas.height = canvas.offsetHeight;
            particles = [];
            for(let i=0; i<30; i++) {
                particles.push({
                    x: Math.random() * width,
                    y: Math.random() * height,
                    vx: (Math.random() - 0.5) * 1,
                    vy: (Math.random() - 0.5) * 1,
                    size: Math.random() * 3 + 1
                });
            }
        }

        function animateHero() {
            ctx.clearRect(0, 0, width, height);
            ctx.fillStyle = 'rgba(255, 255, 255, 0.3)';
            particles.forEach(p => {
                p.x += p.vx;
                p.y += p.vy;
                if(p.x < 0 || p.x > width) p.vx *= -1;
                if(p.y < 0 || p.y > height) p.vy *= -1;
                ctx.beginPath();
                ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2);
                ctx.fill();
            });
            requestAnimationFrame(animateHero);
        }

        window.addEventListener('resize', initHeroCanvas);
        initHeroCanvas();
        animateHero();

    </script>
</body>
</html>
